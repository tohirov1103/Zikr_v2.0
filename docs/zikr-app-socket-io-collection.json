          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event\": \"joinGroup\",\n  \"data\": {\n    \"groupId\": \"{{group_id}}\"\n  }\n}",
          "options": {
            "raw": {
