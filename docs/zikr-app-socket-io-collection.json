      "name": "1. Connect to Socket.IO",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:7373/zikr-app",
          "protocol": "http",
          "host": ["localhost"],
          "port": "7373",
          "path": ["zikr-app"]
        },
        "description": "Connect to the Socket.IO server"
      },
      "response": []
    },
    {
