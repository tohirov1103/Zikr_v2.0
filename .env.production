# APP Configuration
PORT=4000
NODE_ENV=production

# Database Configuration (PostgreSQL in Docker)
DB_USER=zikr
DB_PASSWORD=your_secure_database_password_here
DB_NAME=zikr_db
DATABASE_URL=postgresql://zikr:your_secure_database_password_here@postgres:5432/zikr_db?schema=public

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=7d

# Cloudflare R2 Storage Configuration
R2_BUCKET=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_PUBLIC_URL=https://your-public-url.r2.dev

# Swagger API Documentation
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=your_secure_swagger_password

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-email-app-password

# WebSocket Configuration
ALLOWED_ORIGINS=https://zikr.uzyol.uz,http://zikr.uzyol.uz
SOCKET_ADMIN_USER=admin
SOCKET_ADMIN_PASS=your_secure_socket_admin_password
